<h1 class="text-3xl font-serif">Sign up</h1>

<%= form_with model: @user, url: registration_path do |form| %>
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <div class="mb-4">
    <%= form.label :email, class: "block text-sm font-bold mb-2" %>
    <%= form.email_field :email, class: "appearance-none rounded w-full py-2 px-3 text-black leading-tight focus:outline-none focus:shadow-none focus:ring-0 border-0" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block text-sm font-bold mb-2" %>
    <%= form.password_field :password, class: "appearance-none rounded w-full py-2 px-3 text-black leading-tight focus:outline-none focus:shadow-none focus:ring-0 border-0" %>
  </div>

  <div class="mb-6">
    <%= form.label :password_confirmation, class: "block text-sm font-bold mb-2" %>
    <%= form.password_field :password_confirmation, class: "appearance-none rounded w-full py-2 px-3 text-black leading-tight focus:outline-none focus:shadow-none focus:ring-0 border-0" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Sign up", class: "bg-gold-500 hover:bg-gold-600 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>