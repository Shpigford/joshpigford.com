<div class="flex items-start">
  <h1 class="font-serif text-4xl">Books</h1>
  <% if user_signed_in? %>
    <span class="ml-4 mt-2"><%= link_to 'Add New Book', new_book_path %></span>
  <% end %>
</div>

<h2>Fiction</h2>
<ul>
  <% @fiction.each do |book| %>
    <li>
      <%= link_to book.title, book.link %>
    </li>
  <% end %>
</ul>

<h2>Non-Fiction</h2>
<ul>
  <% @nonfiction.each do |book| %>
    <li>
      <%= link_to book.title, book.link %>
    </li>
  <% end %>
</ul>