<%= form_with model: @owned_art, local: true, data: { turbo: false } do |form| %>
  <% if @owned_art.errors.any? %>
    <div class="border border-red-500 bg-red-50 p-4 rounded mb-6">
      <h2 class="text-red-700 font-semibold mb-2"><%= pluralize(@owned_art.errors.count, "error") %> prohibited this NFT from being saved:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% @owned_art.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: 'block font-semibold mb-2' %>
    <%= form.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: 'block font-semibold mb-2' %>
    <%= form.text_area :description, rows: 4, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <%= form.label :token_id, 'Token ID', class: 'block font-semibold mb-2' %>
      <%= form.text_field :token_id, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
    </div>

    <div>
      <%= form.label :contract_address, class: 'block font-semibold mb-2' %>
      <%= form.text_field :contract_address, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <%= form.label :contract_name, class: 'block font-semibold mb-2' %>
      <%= form.text_field :contract_name, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
    </div>

    <div>
      <%= form.label :token_type, class: 'block font-semibold mb-2' %>
      <%= form.text_field :token_type, placeholder: 'e.g., ERC721', class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <%= form.label :collection_name, class: 'block font-semibold mb-2' %>
      <%= form.text_field :collection_name, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
    </div>

    <div>
      <%= form.label :collection_slug, class: 'block font-semibold mb-2' %>
      <%= form.text_field :collection_slug, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
    </div>
  </div>

  <div class="mb-4">
    <%= form.label :image_url, 'Image URL', class: 'block font-semibold mb-2' %>
    <%= form.text_field :image_url, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
  </div>

  <div class="mb-4">
    <%= form.label :external_url, 'External URL', class: 'block font-semibold mb-2' %>
    <%= form.text_field :external_url, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
  </div>

  <div class="mb-4">
    <%= form.label :blockchain, class: 'block font-semibold mb-2' %>
    <%= form.text_field :blockchain, placeholder: 'ethereum', class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
  </div>

  <div class="mb-6">
    <%= form.check_box :visible, class: 'mr-2' %>
    <%= form.label :visible, 'Visible on site' %>
  </div>

  <%= form.submit @owned_art.new_record? ? 'Create NFT' : 'Update NFT', 
      class: 'bg-gold text-white px-6 py-2 rounded hover:bg-gold-dark transition-colors cursor-pointer' %>
<% end %>